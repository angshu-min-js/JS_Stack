<!DOCTYPE html>
<html>
  <head>
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/angular-toastr.css">
    <link rel="stylesheet" href="/styles/app.css">
    <link rel="stylesheet" href="/styles/foundation.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
  </head>
  <body ng-app="SignupMod" ng-controller="SignupCtrl">
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/jquery-3.1.0.min.js"></script>
    <script src="/js/dependencies/angular.js"></script>
    <script src="/js/dependencies/angular-toastr.tpls.js"></script>
    <script src="/js/dependencies/angular-toastr.tpls.min.js"></script>
    <script src="/js/dependencies/foundation.min.js"></script>
    <script src="/js/public/signup/SignupMod.js"></script>
    <script src="/js/public/signup/SignupCtrl.js"></script>
    <script src="/js/public/login/LoginMod.js"></script>
    <script src="/js/public/login/LoginCtrl.js"></script>
    <script src="/js/private/DashMod.js"></script>
    <script src="/js/private/DashCtrl.js"></script>
    <!--SCRIPTS END-->

  <div class="large-4 large-centered columns">
  <div class="signup-box">
  <div class="row">
  <div class="large-12 columns">
    <h2 class="text-center">UserAuth</h2>
    <p>Please fill the form below</p>
    <form ng-submit="runSignup()">
       <div class="row">
         <div class="large-12 columns">
             <input type="text" name="name" ng-model="name" ng-maxlength="40" placeholder="Name" required/>
         </div>
       </div>
       <div class="row">
         <div class="large-12 columns">
             <input type="email" name="email" ng-model="email" placeholder="Email Address" required/>
         </div>
       </div>
      <div class="row">
         <div class="large-12 columns">
             <input type="password" name="password" ng-model="password" ng-maxlength="20" placeholder="Password" required/>
         </div>
      </div>
      <div class="row">
         <div class="large-12 columns">
             <input type="password" name="password2" ng-model="password2" ng-maxlength="20" placeholder="Confirm Password" required/>
         </div>
      </div>
      <div class="row">
        <div class="large-7 columns">
          <input type="submit" class="button expand" value="Create Account"/>
        </div>
        <div class="large-5 columns">
          <a href="/" class="button expand">Log In</a>
        </div>
      </div>
    </form>
  </div>
</div>
</div>
</div>
  </body>
</html>
